@model Client



<div class="container mt-4">
    <h2 class="text-center mb-4">Add New Client</h2>

    <form asp-controller="Client" asp-action="Create" method="post" enctype="multipart/form-data" class="border p-3 rounded">
      
        <div class="mb-3">
            <label for="Name" class="form-label">Name of Client</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

       <div class="mb-3">
            <label for="Role" class="form-label">Role of Client</label>
           <select asp-for="Role" class="form-select">
                <option value="">Select Your Role</option>
                <option value="Employee">Employee</option>
                <option value="Curent Client">Curent Client</option>
                <option value="Past User">Formmer Client</option>
          </select>
            <span asp-validation-for="Role" class="text-danger"></span>
       </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>



     
        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary" asp-controller="Client" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Client</button>
        </div>
    </form>
</div>
   
