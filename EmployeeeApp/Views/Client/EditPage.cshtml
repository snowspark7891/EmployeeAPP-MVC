@model ClientViewID


<div class="container mt-4 p-5">
  
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Edit Client</h2>
        <a class="text-left btn btn-outline-secondary" asp-action="AddAddressList" asp-route-id="@Model.Id">Add Address</a>
    </div>
  
    <form asp-controller="Client" asp-action="EditClient" method="post" enctype="multipart/form-data" class="border p-3 rounded">

        <div class="mb-3">
            <label for="Name" class="form-label">Name of Client</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Role" class="form-label">Role of Client</label>
            <select asp-for="Role" class="form-select">
                <option value="">Select Your Role</option>
                <option value="Employee">Employee</option>
                <option value="Curent Client">Curent Client</option>
                <option value="Past User">Formmer Client</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>


        @if (Model.list != null && Model.list.Count > 0)
        {
            <div class="mt-4">
                <h3>Client Addresses</h3>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            @* <th>Order ID</th> *@
                            <th>Address</th>
                            <th>Actions</th>
                           
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.list)
                        {
                           @if(order.OrderId !=0)
                            {
                                <tr>
                                    @* <td>@order.OrderId</td> *@
                                    <td>@order.Address</td>
                                    <td>
                                        <a class="btn btn-success" asp-action="EditLIst" asp-route-id="@Model.Id" asp-route-OrderID="@order.OrderId">Edit</a>
                                        <a class="btn btn-danger" asp-action="DeleteList" asp-route-id="@Model.Id" asp-route-OrderID="@order.OrderId">Delete</a>

                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    @* <td>@order.OrderId</td> *@
                                    <td>Address is not available Please add a new Address </td>
                                    <td>
                                        <a class="btn btn-secondary" asp-action="AddAddressList" asp-route-id="@Model.Id">Add Address</a>

                                    </td>
                                </tr>
                            }
                               
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">No orders found for this client.</div>
        }


        <input type="hidden" asp-for="list" value="@Model.list" />
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary" asp-controller="Client" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Client</button>
        </div>





    </form>


</div>

