@model ClientDetails

<div class="container text-center">
    <h2>Are You sure you want to delete this Address</h2>
    <hr />
    <h3>Address: @Model.Address</h3>
    <form asp-controller="Client" asp-action="DeleteList">
        <input type="hidden" asp-for="OrderId" value="@Model.OrderId" />
        <input type="hidden" asp-for="ClientId" value="@Model.ClientId" />
        <input type="hidden" asp-for="Address" value="@Model.Address" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" asp-controller="Client" asp-action="EditPage" asp-route-id="@Model.ClientId">Cancel</a>
    </form>
</div>