@model ClientViewID
<div class="container mt-5 rounded-3 shadow mb-5 p-4 ">
    <h2 class="text-center mb-4">Delete Client</h2>
    <h3 class="text-center mb-4">Are you sure you want to delete this client?</h3>
    <div class="alert alert-danger text-center">
        <strong>Warning!</strong> This action cannot be undone.
    </div>

   
   <div class="text-center">
        <form asp-controller="Client" asp-action="DeleteFromList" method="post" class="text-center">
            <input type="hidden" asp-for="OrderId" asp-route-Id="@Model.OrderId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a class="btn btn-secondary mt-2" asp-controller="Client" asp-action="GetTableClient">Cancel</a>

   </div>
</div>