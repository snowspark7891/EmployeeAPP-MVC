@model ClientView

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="text-center mb-0">Confirm Client Deletion</h3>
        </div>
        <div class="card-body text-center">
            <h4 class="mb-4 text-danger">Are you absolutely sure you want to delete this client? This action cannot be undone.</h4>

            <div class="alert alert-warning" role="alert">
                <h5 class="alert-heading">Client Details to be Deleted:</h5>
                <hr>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-warning mb-4">
                        <tbody>
                           
                            <tr>
                                <th scope="row" class="text-end">Name:</th>
                                <td class="text-start">@Model.Name</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-end">Email:</th>
                                <td class="text-start">@(Model.Email ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-end">Role:</th>
                                <td class="text-start">@(Model.Role ?? "N/A")</td>
                            </tr>
                          
                            <tr>
                                <th scope="row" class="text-end">Associated Addresses:</th>
                                <td class="text-start">
                                    @if (Model.Clientlist != null && Model.Clientlist.Any())
                                    {
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var clientDetail in Model.Clientlist)
                                            {
                                                <li> <strong>Address:</strong> @clientDetail.CityName,@clientDetail.StateName,@clientDetail.Pincode
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No associated address.</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger me-2">Delete Client</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>