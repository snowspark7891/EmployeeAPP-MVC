@model ClientDetails


<div class="container shadow text-center">
    <h3>Add new Address for <strong>@Model.ClientId</strong></h3>
    <hr />
    <form method="post" asp-action="AddAddressList">
        <input type="hidden" asp-for="ClientId" value="@Model.ClientId" />

        <label for="Address" class="form-label">Address</label>
        <input type="text" asp-for="Address" class="form-control mb-3" placeholder="Enter Address" required />

        <div>
            <button type="submit" class="btn btn-primary mb-3">Add Address</button>
            <a class="btn btn-secondary mb-3" asp-action="EditPage" asp-route-id="@Model.ClientId">Back to Edit Page</a>
        </div>

    </form>
</div>